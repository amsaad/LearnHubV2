<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Extra")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body class="bg-gradient" id="layout-body">
    <nav class="navbar default-layout col-lg-12 col-12 p-0 fixed-top navbar-light d-flex flex-row bg-warning">
        <div class="text-center navbar-brand-wrapper d-flex align-items-top justify-content-center bg-warning">
            <a class="navbar-brand brand-logo" href="#">
                LearnHub
            </a>
        </div>
        <div class="navbar-menu-wrapper d-flex align-items-center text-white">
            <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a class="nav-link  p-3" type="button" href="#" data-toggle="modal" data-target="#myModal">
                        Contact <i class="fa fa-compass"></i>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link  p-3 " type="button" href="#" data-toggle="modal" data-target="#myModal">
                        Check Your Account <i class="fa fa-flag-checkered"></i>
                    </a>
                </li>

            </ul>
            <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
        </div>
    </nav>
    <div class="body-wrapper">
        <div class="d-flex justify-content-center">
            @RenderBody()
        </div>
        <div class="row">
            <div class="col">
  
            </div>
        </div>



        @*<hr />*@
        @*<footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
